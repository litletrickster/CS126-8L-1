#include <iostream>
#include <stdio.h>
#include <string.h>
 
int main ()
{
using namespace std;
 
 bool hasUpper = false;
 bool hasLower = false;
 bool hasDigit = false;
 int i = 0;
 char string1[100];
 
cout<<"Please enter password\n";
 cin.getline (string1, 256);
for(int i =0; i < strlen(string1); ++i) //this loop goes through each character to see if it was lowercase, uppercase a digit or a space
{
 
    if( islower(string1[i]) )
        hasLower = true;
 
    if( isupper(string1[i]) )
        hasUpper = true;
 
    if( isdigit(string1[i]) )
        hasDigit = true;
}
 
if(strlen(string1) < 6)
{
    cout<<"Password is too short\n";
}
else if(hasLower && hasUpper && hasDigit)
{
    cout<<"Strong Password\n";
}
else if((hasLower && hasDigit) || (hasLower && hasUpper) || (hasUpper && hasDigit))
{
    cout<<"Medium Password\n";
}
else
{
    cout<<"Weak Password\n";
}  
}
